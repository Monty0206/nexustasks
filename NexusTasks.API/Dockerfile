FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src
COPY ["NexusTasks.API.csproj", "./"]
RUN dotnet restore "NexusTasks.API.csproj"
COPY . .
RUN dotnet build "NexusTasks.API.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "NexusTasks.API.csproj" -c Release -o /app/publish

FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS final
WORKDIR /app
COPY --from=publish /app/publish .
EXPOSE 8080
ENV ASPNETCORE_URLS=http://+:8080
ENTRYPOINT ["dotnet", "NexusTasks.API.dll"]
